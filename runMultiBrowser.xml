<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite Login" parallel="classes">
	
	<listeners>
		<listener class-name="com.store.utils.SuiteListeners"></listener>
	</listeners>

	<test name="Test Automation on Opera">
		<parameter name="browserName" value="opera"></parameter>
		<classes>
			<class name="com.store.tests.CartTest"></class>
		</classes>
	</test>

	<test name="Test Automation on Chrome">
		<parameter name="browserName" value="chrome"></parameter>
		<classes>
			<class name="com.store.tests.CartTest"></class>
		</classes>
	</test>

	<test name="Test Automation on Firefox">
		<parameter name="browserName" value="firefox"></parameter>
		<classes>
			<class name="com.store.tests.CartTest"></class>
		</classes>
	</test>

</suite>
