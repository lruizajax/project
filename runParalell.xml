<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Test Suite" parallel="classes">
	<listeners>
		<listener class-name="com.store.utils.SuiteListeners"></listener>
	</listeners>
	
	<test name="Test Automation on Chrome Parallel">
		<parameter name="browserName" value="chrome"></parameter>
		<classes>
			<class name="com.store.tests.LoginTest"></class>
			<class name="com.store.tests.AccountTest"></class>
			<class name="com.store.tests.SearchTest"></class>
			<class name="com.store.tests.CartTest"></class>
		</classes>
	</test>

</suite>
